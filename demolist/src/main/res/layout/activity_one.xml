<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/itemBox"
            android:transitionName="itemBox"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            >

        <ImageView
                android:layout_gravity="center"
                android:id="@+id/one_icon"
                android:transitionName="icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />

        <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/one_title"
                android:transitionName="title"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="植物大战僵尸2"
                android:textSize="10sp"
                android:layout_toRightOf="@id/one_icon"
                />
    </RelativeLayout>
        <com.dpt.demos.transition.TestView
                android:id="@+id/one_testview"
                android:transitionName="test"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/holo_red_light"
                android:layout_centerInParent="true"
                android:textSize="12dp"
                />

    <Button
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安装"
            android:onClick="install"
            />

</RelativeLayout>