<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
        >

    <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="30dp"
            card_view:cardCornerRadius="4dp"
            android:layout_centerInParent="true"
            android:clickable="false"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="@android:color/holo_red_light"
            card_view:cardPreventCornerOverlap="true"
            >

        <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                card_view:cardCornerRadius="4dp"
                android:clickable="false"
                card_view:cardElevation="0dp"
                card_view:cardPreventCornerOverlap="true"
                >

            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@android:color/holo_blue_light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                <TextView
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:background="@android:color/holo_purple"

                        />

                <TextView
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:gravity="center"
                        />

                <TextView
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_purple"
                        android:text="3"
                        android:gravity="center"
                        />

                <TextView
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:gravity="center"
                        />

                <TextView
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_purple"
                        android:text="5"
                        android:gravity="center"
                        />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>

    <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="detail_btn"
            android:gravity="center"
            android:stateListAnimator="@drawable/detail_btn"
            />

    <ImageView
            android:id="@+id/iv_demo_detail"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:transitionName="demoIcon"
            android:src="@drawable/ic_launcher"
            android:stateListAnimator="@drawable/detail_btn"
            />

    <android.support.v7.widget.CardView
            android:transitionName="itemBox"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:clickable="true"
            android:layout_height="72dp"
            android:elevation="5dp"
            card_view:cardCornerRadius="6dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            >

        <TextView
                android:id="@+id/tv_demo_detail_name"
                android:gravity="center_vertical"
                android:paddingStart="80dp"
                android:paddingLeft="80dp"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:textSize="24sp"
                android:textColor="@color/text"
                android:clickable="false"
                android:background="@drawable/button_rect_list_normal"
                />

        <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:clickable="false"
                android:src="@drawable/ic_launcher"
                />
    </android.support.v7.widget.CardView>

</RelativeLayout>


